<UserControl x:Class="Proje2.View.uyeListele"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Loaded="UserControl_Loaded"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="900">

    <!-- Arka plan koyu ve şeffaf -->
    <Grid Background="#80000000">
        <!-- %50 saydamlık -->
        <Border Background="#CC1C1C1C"
                CornerRadius="20"
                Margin="30"
                Padding="30"
                BorderBrush="#6A0DAD"
                BorderThickness="2">
            <ScrollViewer Background="Transparent" VerticalScrollBarVisibility="Auto">
                <StackPanel Background="Transparent">

                    
                    <!-- Başlık -->
                    <TextBlock Text="ÜYELER"
                               FontSize="26"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Üye Kartları -->
                    <ItemsControl x:Name="uyeListesi">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                        CornerRadius="10"
                                        Margin="10"
                                        Padding="15"
                                        BorderBrush="#6A0DAD"
                                        BorderThickness="1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#2A2A2A"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#3A3A3A"/>
                                                    <Setter Property="BorderBrush" Value="#9B30FF"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid MouseLeftButtonUp="Uye_Click" Cursor="Hand">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- Cinsiyete göre resim -->
                                            <Image Source="{Binding ResimYolu}"
                                           Width="32"
                                           Height="32"
                                           Margin="0,0,10,0" VerticalAlignment="Center"/>
                                            <!-- Ad Soyad -->
                                            <TextBlock Text="{Binding adSoyad}"
                                               Foreground="Black"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
