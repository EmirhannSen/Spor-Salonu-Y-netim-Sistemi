<Window x:Class="Proje2.View.DiyetEkle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Diyet Ekle" Height="600" Width="950"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
            <StackPanel>

                <!-- Başlık ve Üye Bilgisi -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Diyet Programı" />
                    <TextBlock x:Name="txtAdSoyad" Text="   |   Ad Soyad" FontWeight="Bold" FontSize="16" Margin="20,0,0,0" />
                </StackPanel>

                <!-- Diyet Öğünü Seçimi ve Gün Seçimi -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Width="800" VerticalAlignment="Center">
                    <TextBlock Text="Öğün Seç:" Width="100" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CbOgunler" Width="300" DisplayMemberPath="OgunAdi" />

                    <TextBlock Text="Gün:" Width="50" Margin="20,0,0,0" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CbGunler" Width="150"/>

                    <Button Content="Ekle" Width="100" Margin="20,0,0,0" Click="BtnEkle_Click"/>
                </StackPanel>

                <!-- Haftalık Program TabControl -->
                <TabControl x:Name="TabGunler" Margin="0,10,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="400">
                    <TabItem Header="Pazartesi">
                        <DataGrid x:Name="DgPazartesi" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Öğün" Binding="{Binding OgunAdi}" Width="*"/>
                                <DataGridTextColumn Header="Kalori" Binding="{Binding Kalori}" Width="100"/>
                                <DataGridTextColumn Header="Öğün Zamanı" Binding="{Binding OgunZamani}" Width="150"/>
                                <DataGridTemplateColumn Header="İşlem" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Padding="5,2" Click="BtnSil_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Salı">
                        <DataGrid x:Name="DgSali" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Öğün" Binding="{Binding OgunAdi}" Width="*"/>
                                <DataGridTextColumn Header="Kalori" Binding="{Binding Kalori}" Width="100"/>
                                <DataGridTextColumn Header="Öğün Zamanı" Binding="{Binding OgunZamani}" Width="150"/>
                                <DataGridTemplateColumn Header="İşlem" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Padding="5,2" Click="BtnSil_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <!-- Aynı yapıyı diğer günler için de ekleyebilirsin -->
                    <TabItem Header="Çarşamba">
                        <DataGrid x:Name="DgCarsamba" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Öğün" Binding="{Binding OgunAdi}" Width="*"/>
                                <DataGridTextColumn Header="Kalori" Binding="{Binding Kalori}" Width="100"/>
                                <DataGridTextColumn Header="Öğün Zamanı" Binding="{Binding OgunZamani}" Width="150"/>
                                <DataGridTemplateColumn Header="İşlem" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Padding="5,2" Click="BtnSil_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Perşembe">
                        <DataGrid x:Name="DgPersembe" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Öğün" Binding="{Binding OgunAdi}" Width="*"/>
                                <DataGridTextColumn Header="Kalori" Binding="{Binding Kalori}" Width="100"/>
                                <DataGridTextColumn Header="Öğün Zamanı" Binding="{Binding OgunZamani}" Width="150"/>
                                <DataGridTemplateColumn Header="İşlem" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Padding="5,2" Click="BtnSil_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Cuma">
                        <DataGrid x:Name="DgCuma" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Öğün" Binding="{Binding OgunAdi}" Width="*"/>
                                <DataGridTextColumn Header="Kalori" Binding="{Binding Kalori}" Width="100"/>
                                <DataGridTextColumn Header="Öğün Zamanı" Binding="{Binding OgunZamani}" Width="150"/>
                                <DataGridTemplateColumn Header="İşlem" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Padding="5,2" Click="BtnSil_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Cumartesi">
                        <DataGrid x:Name="DgCumartesi" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Öğün" Binding="{Binding OgunAdi}" Width="*"/>
                                <DataGridTextColumn Header="Kalori" Binding="{Binding Kalori}" Width="100"/>
                                <DataGridTextColumn Header="Öğün Zamanı" Binding="{Binding OgunZamani}" Width="150"/>
                                <DataGridTemplateColumn Header="İşlem" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Padding="5,2" Click="BtnSil_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Pazar">
                        <DataGrid x:Name="DgPazar" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Öğün" Binding="{Binding OgunAdi}" Width="*"/>
                                <DataGridTextColumn Header="Kalori" Binding="{Binding Kalori}" Width="100"/>
                                <DataGridTextColumn Header="Öğün Zamanı" Binding="{Binding OgunZamani}" Width="150"/>
                                <DataGridTemplateColumn Header="İşlem" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Padding="5,2" Click="BtnSil_Click"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    
                </TabControl>

            </StackPanel>
        </Border>
    </Grid>
</Window>
