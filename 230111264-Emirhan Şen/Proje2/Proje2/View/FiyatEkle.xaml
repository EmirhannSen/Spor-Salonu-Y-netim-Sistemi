<UserControl x:Class="Proje2.View.FiyatEkle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700">

    <Grid Background="#80000000">
        <Border Background="#CC1C1C1C" CornerRadius="20" Margin="30" Padding="20" BorderBrush="#6A0DAD" BorderThickness="2">
            <TabControl Background="Transparent" BorderThickness="0"
                        FontWeight="SemiBold" Foreground="White">

                <!-- TAB 1: Fiyat Ekle -->
                <TabItem Header="Fiyat Ekle" FontSize="15">
                    <StackPanel Margin="20" >
                        <TextBlock Text="Fiyat Ekleme" FontSize="22" FontWeight="Bold"
                                   Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <UniformGrid Columns="2" Rows="3" Margin="0,0,0,20">
                            <StackPanel Margin="5">
                                <Label Content="Kategori" Foreground="White"/>
                                <ComboBox x:Name="cmbKategori" Height="30" Background="White" Foreground="Black"/>
                            </StackPanel>

                            <StackPanel Margin="5">
                                <Label Content="Süre (Ay)" Foreground="White"/>
                                <TextBox x:Name="txtSure" Height="30" Background="White" Foreground="Black"/>
                            </StackPanel>

                            <StackPanel Margin="5">
                                <Label Content="Fiyat (TL)" Foreground="White"/>
                                <TextBox x:Name="txtFiyat" Height="30" Background="White" Foreground="Black"/>
                            </StackPanel>
                        </UniformGrid>

                        <Button Content="Fiyatı Kaydet" Width="150" Height="35"
                                HorizontalAlignment="Center"
                                Background="#7F00FF" Foreground="White" FontWeight="Bold"
                                Click="BtnKaydet_Click" BorderThickness="0"/>
                    </StackPanel>
                </TabItem>

                <!-- TAB 2: Fiyat Listesi -->
                <TabItem Header="Fiyat Listesi" FontSize="15">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Stilize Edilmiş DataGrid -->
                        <DataGrid x:Name="dataGridFiyatlar" AutoGenerateColumns="False" IsReadOnly="True"
          Background="White" Foreground="Black"
          Grid.Row="0" Margin="0,0,0,10" SelectionMode="Single"
          RowHeight="35" ColumnHeaderHeight="40" HeadersVisibility="Column"
          BorderThickness="1" BorderBrush="#6A0DAD"
          HorizontalContentAlignment="Center"
          VerticalContentAlignment="Center">

                            <DataGrid.Resources>
                                <!-- Sütun başlığı ortalanmış -->
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#7F00FF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>

                                <!-- Hücre içerikleri ortalanmış -->
                                <Style TargetType="DataGridCell">
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.Resources>

                            <DataGrid.Columns>
                                <!-- ID Kolonunu Gizle -->
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Visibility="Collapsed"/>
                                <DataGridTextColumn Header="Kategori" Binding="{Binding KategoriAdi}" Width="*" />
                                <DataGridTextColumn Header="Süre (Ay)" Binding="{Binding SureAy}" Width="*" />
                                <DataGridTextColumn Header="Fiyat (TL)" Binding="{Binding Fiyat}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>


                        <!-- Sil Butonu -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
                            <Button Content="Sil" Width="100" Height="30"
                                    Background="Red" Foreground="White"
                                    FontWeight="Bold" Click="SilButton_Click" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</UserControl>
