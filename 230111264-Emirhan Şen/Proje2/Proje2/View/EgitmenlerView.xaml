<UserControl x:Class="Proje2.View.EgitmenlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="600">

    <Grid Background="#80000000">
        <!-- Border with rounded corners and background -->
        <Border Background="#CC1C1C1C" 
                CornerRadius="20" 
                Margin="30" 
                Padding="30" 
                BorderBrush="#7F00FF" 
                BorderThickness="2">
            <StackPanel>

                <!-- Header Section -->
                <TextBlock Text="EĞİTMENLER" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- ScrollViewer to add scrolling functionality to DataGrid -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Height="450">
                    <!-- DataGrid to show the list of trainers -->
                    <DataGrid x:Name="EgitmenlerDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              Margin="0,20,0,0"
                              FontSize="14"
                              RowHeight="35"
                              Background="#1E2124"
                              Foreground="Black"
                              BorderBrush="#444"
                              GridLinesVisibility="Horizontal"
                              ColumnHeaderHeight="35"
                              EnableRowVirtualization="True">
                        <DataGrid.Columns>
                            <!-- Ad Soyad Column -->
                            <DataGridTemplateColumn Header="Ad Soyad" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <!-- Kullanılacak TextBlock -->
                                        <TextBlock>
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} {1}">
                                                    <Binding Path="Ad" />
                                                    <Binding Path="Soyad" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <!-- Telefon Column -->
                            <DataGridTextColumn Header="Telefon" 
                                                Binding="{Binding Telefon}" 
                                                Width="100" />

                            <!-- Email Column -->
                            <DataGridTextColumn Header="Email" 
                                                Binding="{Binding Email}" 
                                                Width="170" />

                            <!-- Kayıt Tarihi Column -->
                            <DataGridTextColumn Header="Kayıt Tarihi" 
                                                Binding="{Binding KayitTarihi, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                                Width="100" />
                        </DataGrid.Columns>
                    </DataGrid>

                </ScrollViewer>

            </StackPanel>
        </Border>

        <!-- Add New Trainer and Delete Buttons Section -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,40,40">
            <!-- Add New Trainer Button -->
            <Button Width="43" Height="43" Click="EgitmenEkle_Click" Margin="7,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <!-- MouseOver Trigger: Hover Durumunda Resmi Değiştir -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/Imagess/plus1.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- MouseOut Trigger: Normal Durumda Resmi Geri Al -->
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/Imagess/plus.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <!-- Normal Görünüm Resmi -->
                <Button.Background>
                    <ImageBrush ImageSource="/Imagess/plus.png"/>
                </Button.Background>
            </Button>

            <!-- Delete Trainer Button -->
            <Button Width="43" Height="43" Click="SilButton_Click" Margin="7,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                BorderThickness="0"
                                BorderBrush="Transparent"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <!-- Triggers -->
                        <ControlTemplate.Triggers>
                            <!-- MouseOver Trigger: Hover Durumunda Resmi Değiştir -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/Imagess/delete1.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- MouseOut Trigger: Normal Durumda Resmi Geri Al -->
                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="/Imagess/delete2.png"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>

                <!-- Normal Görünüm Resmi -->
                <Button.Background>
                    <ImageBrush ImageSource="/Imagess/delete1.png"/>
                </Button.Background>
            </Button>

        </StackPanel>

    </Grid>
</UserControl>
