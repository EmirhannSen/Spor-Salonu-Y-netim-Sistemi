<Window x:Class="Proje2.View.ProgramAta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Program Ekle" Height="600" Width="950"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <!-- Tek kolon -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Egzersiz Programı Alanı -->
        <Border BorderBrush="Gray" BorderThickness="1" Padding="10">
            <StackPanel>

                <!-- Başlık ve Üye Bilgisi -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                    <TextBlock FontSize="18" FontWeight="Bold" Text="Egzersiz Programı" />
                    <TextBlock x:Name="lblUyeAdi" Text="   |   Ad Soyad" FontWeight="Bold" FontSize="16" Margin="20,0,0,0" />
                </StackPanel>

                <!-- Egzersiz Ekleme Paneli -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10" Width="700">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Kas Grubu:" Width="80" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding KasGrubuListesi}"
                                  SelectedItem="{Binding SecilenKasGrubu, Mode=TwoWay}"
                                  Width="200" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Egzersiz:" Width="80" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding FiltrelenmisEgzersizler}"
                                  SelectedItem="{Binding SecilenEgzersiz, Mode=TwoWay}"
                                  DisplayMemberPath="EgzersizAdi"
                                  Width="200" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="Set:" Width="80" VerticalAlignment="Center"/>
                        <TextBox Width="50" Text="{Binding Set}" Margin="10,0,0,0"/>
                        <TextBlock Text="Tekrar:" Width="60" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <TextBox Width="50" Text="{Binding Tekrar}"/>
                        <TextBlock Text="Süre:" Width="50" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <TextBox Width="50" Text="{Binding Sure}"/>
                        <TextBlock Text="Gün:" Width="40" VerticalAlignment="Center" Margin="20,0,0,0"/>
                        <ComboBox Width="100"
                                  ItemsSource="{Binding Gunler}"
                                  SelectedItem="{Binding SecilenGun, Mode=TwoWay}"/>
                        <Button Content="Ekle" Width="80" Margin="20,0,0,0" Click="Ekle_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Haftalık Program TabControl -->
                <TabControl x:Name="TabGunler" Margin="0,10,0,0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
                    <TabItem Header="Pazartesi">
                        <DataGrid ItemsSource="{Binding PazartesiListesi}" AutoGenerateColumns="False"
              FontSize="16" CanUserAddRows="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Egzersiz" Binding="{Binding EgzersizAdi}"/>
                                <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
                                <DataGridTextColumn Header="Tekrar" Binding="{Binding Tekrar}"/>
                                <DataGridTextColumn Header="Süre" Binding="{Binding Sure}"/>
                                <DataGridTemplateColumn >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Click="Sil_Click" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="Salı">
                        <DataGrid ItemsSource="{Binding SaliListesi}" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Egzersiz" Binding="{Binding EgzersizAdi}"/>
                                <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
                                <DataGridTextColumn Header="Tekrar" Binding="{Binding Tekrar}"/>
                                <DataGridTextColumn Header="Süre" Binding="{Binding Sure}"/>
                                <DataGridTemplateColumn >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Click="Sil_Click" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Çarşamba">
                        <DataGrid ItemsSource="{Binding CarsambaListesi}" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Egzersiz" Binding="{Binding EgzersizAdi}"/>
                                <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
                                <DataGridTextColumn Header="Tekrar" Binding="{Binding Tekrar}"/>
                                <DataGridTextColumn Header="Süre" Binding="{Binding Sure}"/>
                                <DataGridTemplateColumn >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Click="Sil_Click" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Perşembe">
                        <DataGrid ItemsSource="{Binding PersembeListesi}" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Egzersiz" Binding="{Binding EgzersizAdi}"/>
                                <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
                                <DataGridTextColumn Header="Tekrar" Binding="{Binding Tekrar}"/>
                                <DataGridTextColumn Header="Süre" Binding="{Binding Sure}"/>
                                <DataGridTemplateColumn >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Click="Sil_Click" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Cuma">
                        <DataGrid ItemsSource="{Binding CumaListesi}" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Egzersiz" Binding="{Binding EgzersizAdi}"/>
                                <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
                                <DataGridTextColumn Header="Tekrar" Binding="{Binding Tekrar}"/>
                                <DataGridTextColumn Header="Süre" Binding="{Binding Sure}"/>
                                <DataGridTemplateColumn >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Click="Sil_Click" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Cumartesi">
                        <DataGrid ItemsSource="{Binding CumartesiListesi}" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Egzersiz" Binding="{Binding EgzersizAdi}"/>
                                <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
                                <DataGridTextColumn Header="Tekrar" Binding="{Binding Tekrar}"/>
                                <DataGridTextColumn Header="Süre" Binding="{Binding Sure}"/>
                                <DataGridTemplateColumn >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Click="Sil_Click" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="Pazar">
                        <DataGrid ItemsSource="{Binding PazarListesi}" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="16">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Egzersiz" Binding="{Binding EgzersizAdi}"/>
                                <DataGridTextColumn Header="Set" Binding="{Binding Set}"/>
                                <DataGridTextColumn Header="Tekrar" Binding="{Binding Tekrar}"/>
                                <DataGridTextColumn Header="Süre" Binding="{Binding Sure}"/>
                                <DataGridTemplateColumn >
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Sil" Click="Sil_Click" Padding="5,2"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>

            </StackPanel>
        </Border>
    </Grid>
</Window>
