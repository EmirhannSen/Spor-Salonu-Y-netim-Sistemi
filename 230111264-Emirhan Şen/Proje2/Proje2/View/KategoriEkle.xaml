<UserControl x:Class="Proje2.View.KategoriEkle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="700">
    <Grid Background="#80000000">
        <Border Background="#CC1C1C1C" CornerRadius="20" Margin="30" Padding="30" BorderBrush="#7F00FF" BorderThickness="2">
            <StackPanel>
                <TextBlock Text="Kategori Ekleme Formu" FontSize="22" FontWeight="Bold" Foreground="White"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox Name="txtKategori" Width="200" Height="30" Background="White" Foreground="Black" 
                             BorderBrush="#7F00FF" BorderThickness="1" Padding="5" FontSize="14"/>
                    <Button Content="Ekle" Width="80" Height="30" Background="#7F00FF" Foreground="White"
                            VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" 
                            Click="BtnEkle_Click" Cursor="Hand" BorderThickness="0" Margin="10,0"/>
                </StackPanel>

                <!-- Kategori Listeleme ve Silme -->
                <DataGrid Name="dgKategoriler" AutoGenerateColumns="False" IsReadOnly="True"
                          SelectionMode="Single" SelectionUnit="FullRow" Margin="0,10,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*"/>
                        <DataGridTemplateColumn Header="Sil" Width="35">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Sil" Click="BtnSil_Click" Tag="{Binding Id}" 
                                            Background="#FF6347" Foreground="White" FontWeight="Bold" 
                                            Padding="5" BorderBrush="#FF6347" BorderThickness="1"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
