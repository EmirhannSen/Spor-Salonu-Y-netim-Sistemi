<Window x:Class="Proje2.View.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kayıt Ol" Height="550" Width="800"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20" BorderThickness="3">
        <Border.Background>
            <ImageBrush ImageSource="pack://application:,,,/Proje2;component/Imagess/image.jpg" Stretch="UniformToFill"/>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#6A0DAD" Offset="0"/>
                <GradientStop Color="#00FFFF" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,10,0">
                <Button Content="X" Width="30" Height="30" FontSize="16"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        Click="Close_Click"/>
            </StackPanel>

            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="#CC1C1C1C" CornerRadius="15" Padding="20">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">

                        <Image Source="/Proje2;component/Imagess/logo.png"
                               Width="100" Height="100" HorizontalAlignment="Center"/>

                        <TextBlock Text="Kayıt Ol" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="Lütfen bilgilerinizi girerek kaydınızı tamamlayın."
                                   FontSize="12" TextAlignment="Center" TextWrapping="Wrap" Foreground="White" Margin="0,5,0,20"/>

                        <!-- 🔹 Ad Soyad Alanı -->
                        <TextBlock Text="Ad Soyad" Foreground="White" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Proje2;component/Imagess/user.png" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBox x:Name="AdSoyadTextBox" Height="30" Width="270" Background="White" Foreground="Black" Margin="10,0,0,10"/>
                        </StackPanel>

                        <!-- 🔹 E-Posta Alanı -->
                        <TextBlock Text="E-Posta" Foreground="White" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Proje2;component/Imagess/user.png" Width="20" Height="20" VerticalAlignment="Center"/>
                            <TextBox x:Name="EmailTextBox" Height="30" Width="270" Background="White" Foreground="Black" Margin="10,0,0,10"/>
                        </StackPanel>

                        <!-- 🔹 Parola Alanı -->
                        <TextBlock Text="Parola" Foreground="White" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Proje2;component/Imagess/keyicon.png" Width="20" Height="20" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="PasswordBox" Height="30" Width="270" Background="White" Foreground="Black" Margin="10,0,0,0"/>
                        </StackPanel>

                        <!-- 🔹 Kayıt Butonu -->
                        <Button Content="KAYITOL" Height="35" Background="#7F00FF" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="10"
                                Cursor="Hand" Click="RegisterButton_Click"/>

                        <!-- 🔹 Mesajlar -->
                        <TextBlock x:Name="SuccessMessage" Text="Kayıt başarılı!" Foreground="LimeGreen"
                                   FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"
                                   Margin="0,10,0,0" Visibility="Collapsed"/>

                        <TextBlock x:Name="ErrorMessage" Text="Lütfen tüm alanları doldurun!" Foreground="Red"
                                   FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"
                                   Margin="0,10,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
